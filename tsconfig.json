{
    "compilerOptions": {
      "typeRoots": ["./node_modules/@types", "./types"],
      "strict": true,
      "target": "es5",
      "module": "esnext",
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["apps/*/src/*"],
        "@env/*": ["apps/*/src/environments/*"]
      },
      "lib": ["es2018", "dom"]
    },
    "include": ["**/*.ts", "**/*.tsx","src", "types"],
    "exclude": ["node_modules", "tmp"]
  }
  